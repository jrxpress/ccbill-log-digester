<h1>Listing logs</h1>

<table>
  <thead>
    <tr>
      <th>Operation type</th>
      <th>Date</th>
      <th>Username</th>
      <th>Second date</th>
      <th>Ip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.operation_type %></td>
        <td><%= log.date %></td>
        <td><%= log.username %></td>
        <td><%= log.second_date %></td>
        <td><%= log.ip %></td>
        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_log_path(log) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Log', new_log_path %>
